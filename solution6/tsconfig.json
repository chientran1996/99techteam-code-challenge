{
    "compilerOptions": {
        /* ===== Output & structure ===== */
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        /* ===== Language & target ===== */
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        /* ===== Modules ===== */
        "module": "commonjs",
        "moduleResolution": "node",
        /* ===== Interop & ergonomics ===== */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        /* ===== Strictness ===== */
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        /* ===== Nice to have ===== */
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        /* ===== Paths alias ===== */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}