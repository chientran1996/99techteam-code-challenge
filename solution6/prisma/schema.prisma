datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}
generator client {
    provider = "prisma-client-js"
}

model UserScore {
  userId    String  @id
  score     Int     @default(0)
  updatedAt DateTime @updatedAt
}

model ScoreEvent {
  id        String   @id @default(uuid())
  userId    String
  actionId  String
  points    Int
  reason    String?
  createdAt DateTime @default(now())

  @@unique([userId, actionId])
}